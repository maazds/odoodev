              <field name="code">
                action = {
                  "type": "ir.actions.act_window",
                  "view_mode": "tree,form",
                  "res_model": model._name,
                }
              </field>
            </record>
        -->

        <!-- Top menu item -->


        <menuitem name="odoo 16" id="odoo_menu_root" sequence="0" web_icon="odoo16,static/description/odoo.jpeg"/>

        <!-- menu categories -->

        <menuitem name="Menu 1" id="odoo16_menu_1" parent="odoo_menu_root"/>
        <menuitem name="Menu 2" id="odoo16_menu_2" parent="odoo16_menu_1" action="odoo16.action_window"/>
        <!--    <menuitem name="Menu 2" id="odoo16.menu_2" parent="odoo16.menu_root"/>-->


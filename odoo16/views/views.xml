<odoo>
    <data>
        <!-- explicit list view definition -->
        <!--TREE VIEW-->
        <record model="ir.ui.view" id="odoo16_list">
            <field name="name">odoo16 list</field>
            <field name="model">odoo.16</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="ref"/>
                    <field name="gender"/>
                </tree>
            </field>
        </record>
        <!--    FORM VIEW-->
        <record model="ir.ui.view" id="odoo16_form">
            <field name="name">odoo16 form</field>
            <field name="model">odoo.16</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="gender"/>
                            </group>
                            <group>
                                <field name="age"/>
                                <field name="ref"/>
                                <field name="active" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--SEARCH VIEW-->
        <record model="ir.ui.view" id="odoo16_search">
            <field name="name">odoo16 search</field>
            <field name="model">odoo.16</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Entry" filter_domain="['|',('name','ilike',self),('ref','ilike',self)]"/>
                    <filter name="filter_male" string="Male" domain="[('gender','=','0')]"/>
                    <filter name="filter_female" string="Female" domain="[('gender','=','1')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Gender" name="groupby_gender" context="{'group_by':'gender'}"/>
                    </group>
                </search>
            </field>
        </record>


        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="odoo16.action_window">
            <field name="name">odoo16 Dev</field>
            <field name="res_model">odoo.16</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- server action to the one above -->
        <!--
